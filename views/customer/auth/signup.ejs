<%- include("../../shared/includes/head", { pageTitle: "Signup" }) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include("../../shared/includes/header") %>
    <main>
        <% if (inputData.errorMessage) { %>
            <p class="alert"><%= inputData.errorMessage %></p>
        <% } %>
        <h1>Create New Account</h1>
        <form action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= inputData.email %>">
            </p>
            <p>
                <label for="confirmEmail">Confirm Email</label>
                <input type="email" name="confirmEmail" id="confirmEmail" value="<%= inputData.confirmEmail %>">
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" id="password" minlength="6" name="password" value="<%= inputData.password %>">
            </p>
            <hr>
            <p>
                <label for="fullname">Full Name</label>
                <input type="text" id="fullname" name="fullname" value="<%= inputData.fullname %>">
            </p>

            <p>
                <label for="street">Street</label>
                <input type="text" id="street" name="street" value="<%= inputData.street %>">
            </p>

            <p>
                <label for="postalCode">Postal Code</label>
                <input type="text" minlength="5" maxlength="5" id="postalCode" name="postalCode" value="<%= inputData.postalCode %>">
            </p>
        
            <p>
                <label for="city">City</label>
                <input type="text" id="city" name="city" value="<%= inputData.city %>">
            </p>

            <button class="btn" type="submit">Create Account</button>
            <p id="switch-form"><a href="/login">Login instead</a></p>
        </form>
    </main>

<%- include("../../shared/includes/footer") %>